{
  "name": "thegame",
  "version": "0.0.1",
  "description": "",
  "main": "server/index.js",
  "scripts": {
    "test": "iojs node_modules/mocha/bin/mocha --harmony spec/index.js",
    "stop:api": "iojs node_modules/pm2/bin/pm2 stop api || true",
    "start:api": "iojs node_modules/pm2/bin/pm2 start build/api --name api",
    "restart:api": "npm run stop:api && npm run start:api",
    "stop:dispatcher": "iojs node_modules/pm2/bin/pm2 stop dispatcher || true",
    "start:dispatcher": "iojs node_modules/pm2/bin/pm2 start build/dispatcher --name dispatcher",
    "restart:dispatcher": "npm run stop:dispatcher && npm run start:dispatcher",
    "client:start": "iojs node_modules/gulp/bin/gulp client:start",
    "build": "iojs node_modules/gulp/bin/gulp",
    "start": "npm run restart:dispatcher && npm run restart:api",
    "watch": "iojs node_modules/gulp/bin/gulp watch",
    "lint": "bash spec/lint.sh"
  },
  "config": {
    "CLIENT_PORT": 8080,
    "API_HOST": "localhost",
    "API_SCHEME": "http",
    "API_PORT": 8000,
    "DISPATCHER_PORT": 8001,
    "GAME_PORT_START": 8002,
    "LIVERELOAD": false,
    "ASSET_URL": "/"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:erulabs/thegame"
  },
  "author": "Seandon Mooy",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/erulabs/thegame/issues"
  },
  "homepage": "https://github.com/erulabs/thegame",
  "devDependencies": {
    "babelify": "^5.0.4",
    "browserify": "^9.0.3",
    "chai": "^2.1.1",
    "connect-modrewrite": "^0.7.11",
    "gulp": "^3.8.11",
    "gulp-babel": "^4.0.0",
    "gulp-clean": "^0.3.1",
    "gulp-concat": "^2.5.2",
    "gulp-connect": "^2.2.0",
    "gulp-develop-server": "^0.4.0",
    "gulp-exec": "^2.1.1",
    "gulp-jade": "^1.0.0",
    "gulp-jshint": "^1.9.2",
    "gulp-less": "^3.0.1",
    "gulp-rename": "^1.2.0",
    "gulp-watch": "^4.1.1",
    "jsdoc": "git+http://github.com/jsdoc3/jsdoc",
    "jshint": "^2.6.3",
    "jshint-stylish": "^1.0.1",
    "mocha": "^2.2.1",
    "run-sequence": "^1.0.2",
    "vinyl-source-stream": "^1.1.0"
  },
  "dependencies": {
    "express": "^4.12.2",
    "github-webhook": "^0.2.0",
    "pm2": "^0.12.7",
    "request": "^2.53.0",
    "socket.io": "^1.3.5",
    "underscore": "^1.8.2"
  }
}
