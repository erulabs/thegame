  "license": "ISC",
  "bugs": {
    "url": "https://github.com/erulabs/thegame/issues"
  },
  "homepage": "https://github.com/erulabs/thegame",
  "devDependencies": {
    "babel-core": "^4.7.16",
    "babel-loader": "^4.2.0",
    "chai": "^2.1.1",
    "connect-modrewrite": "^0.7.11",
    "gulp": "^3.8.11",
    "gulp-babel": "^4.0.0",
    "gulp-clean": "^0.3.1",
    "gulp-concat": "^2.5.2",
    "gulp-connect": "^2.2.0",
    "gulp-develop-server": "^0.4.0",
    "gulp-exec": "^2.1.1",
    "gulp-jade": "^1.0.0",
    "gulp-jshint": "^1.9.4",
    "gulp-less": "^3.0.2",
    "gulp-rename": "^1.2.0",
    "gulp-watch": "^4.1.1",
